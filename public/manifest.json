{
    "$schema": "https://json.schemastore.org/chrome-manifest",

    "name": "Tetrium - Falling blocks!",
    "short_name": "Tetrium",
    "version": "1.0.0",
    "description": "A modernised, smooth tetra block stacker!",

    "icons": {
        "16": "/assets/logo16x16.png",
        "32": "/assets/logo32x32.png",
        "48": "/assets/logo48x48.png",
        "64": "/assets/logo64x64.png",
        "128": "/assets/logo128x128.png",
        "256": "/assets/logo256x256.png"
    },

    "action": {
        "default_icon": {
            "16": "/assets/logo16x16.png",
            "32": "/assets/logo32x32.png",
            "48": "/assets/logo48x48.png",
            "128": "/assets/logo128x128.png",
            "256": "/assets/logo256x256.png"
        },
        "default_title": "Tetrium",
        "default_popup": "index.html"
    },

    "permissions": ["storage"],

    "offline_enabled": true,

    "manifest_version": 3
}
